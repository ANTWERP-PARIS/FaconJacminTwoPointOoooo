{% comment %}
  USAGE
  {% render '_product-grid', id: section.id, products: collection.products, count: collection.products_count %}{% endcomment %}

{%- if products and count>0 and id -%}
  <ul id="product-grid" data-id="{{ id }}" class="grid grid--2-col negative-margin product-grid">

    {%- for product in products -%}
      <li class="grid__item">
        {% render 'product-card',
           product_card_product: product,
           media_size: "portrait",
           show_secondary_image: true,
           add_image_padding: false,
           show_vendor: false,
           show_image_outline: false,
           show_rating: false
         %}
      </li>
    {%- endfor -%}

  </ul>
{%- endif -%}
