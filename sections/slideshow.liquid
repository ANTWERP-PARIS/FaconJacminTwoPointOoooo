{% schema %}
{
  "name": "Slideshow",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 9,
      "step": 2,
      "unit": "s",
      "label": "Change slides every",
      "default": 5
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "select",
      "id": "color_overlay",
      "options": [
        {
          "value": "sec",
          "label": "Secondary accent"
        },
        {
          "value": "black",
          "label": "Black"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "sec",
      "label": "Color",
      "info": "The color of the overlay."
    },
    {
      "type": "select",
      "id": "overlay",
      "options": [
        {
          "value": "logo",
          "label": "Logo"
        },
        {
          "value": "text",
          "label": "Custom text"
        }
      ],
      "default": "logo",
      "label": "Overlay content"
    },
    {
      "type": "text",
      "id": "overlay_text",
      "label": "Custom text",
      "info": "Text over slideshow if 'Custom text' is selected.",
      "default": "New Collection"
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Slideshow link"
    },
    {
      "type": "select",
      "id": "window",
      "options": [
        {
          "value": "_self",
          "label": "This window"
        },
        {
          "value": "_blank",
          "label": "New window"
        }
      ],
      "default": "_self",
      "label": "Open in"
    },

    {
      "type": "video",
      "id": "video",
      "label": "Video"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Image slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },

    {
      "type": "video",
      "name": "Video slide",
      "limit": 1,
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Video"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}


<div class="slideshow">
    <div class="imgs fix" data-auto="{{ section.settings.change_slides_speed }}">
        {%- for block in section.blocks -%}

            {%- if block.settings.image -%}
                <img
                  srcset="{%- if block.settings.image.width >= 375 -%}{{ block.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
                  {%- if block.settings.image.width >= 550 -%}{{ block.settings.image | image_url: width: 550 }} 550w,{%- endif -%}
                  {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if block.settings.image.width >= 1100 -%}{{ block.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                  {%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {%- if block.settings.image.width >= 1780 -%}{{ block.settings.image | image_url: width: 1780 }} 1780w,{%- endif -%}
                  {%- if block.settings.image.width >= 2000 -%}{{ block.settings.image | image_url: width: 2000 }} 2000w,{%- endif -%}
                  {%- if block.settings.image.width >= 3000 -%}{{ block.settings.image | image_url: width: 3000 }} 3000w,{%- endif -%}
                  {%- if block.settings.image.width >= 3840 -%}{{ block.settings.image | image_url: width: 3840 }} 3840w,{%- endif -%}
                  {{ block.settings.image | image_url }} {{ block.settings.image.width }}w"
                  sizes="100vw"
                  src="{{ block.settings.image | image_url: width: 1500 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round }}"
                >
            {%- endif -%}
            {%- if block.settings.video -%}
                <a href="https://www.faconjacmin.com/collections/new-arrivals" target="_blank">
    {{ block.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
  </a>
            {%- endif -%}
        {%- endfor -%}
    </div>

{%- stylesheet -%}
.slideshow {
  position: relative;
  z-index: 0;
  
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.slideshow .imgs, .slideshow .imgs img, .slideshow .overlay {
  width: 100%;
  height: 100%;
}

.slick-track {
  position: absolute;
}
.slick-list, .slick-track, .slick-slide div {
  height: 100% !important;
}

.slideshow .imgs {
  top: 82px;
  height: calc(100% - 79px);
  z-index: -1 !important;
}

/* Réglage de la vidéo pour qu'elle reste dans un format vertical */
.slideshow .imgs img, .slideshow .imgs video {
  object-fit: contain;  /* Garder l'image ou la vidéo entière sans la couper */
  width: 100%;           /* Remplir la largeur du conteneur */
  height: 150%;          /* Remplir la hauteur du conteneur */
  margin: 0;             /* Supprimer les marges indésirables */
  padding: 0;            /* Supprimer le padding qui pourrait causer un espacement */
}

/* Pour la vidéo spécifiquement */
.slideshow .imgs video {
  display: block !important;  /* Affiche la vidéo comme un bloc */
  width: 100%;                /* Remplir la largeur du conteneur */
  height: auto;               /* Laisser la hauteur ajustable selon l'aspect ratio */
  margin: 0 auto;             /* Centrer la vidéo dans le conteneur */
  max-height: 100vh;          /* Limiter la hauteur à 100% de la hauteur de l'écran */
  object-position: center;    /* Centrer la vidéo dans son conteneur */
  position: absolute;         /* Fixer la vidéo en haut de la page */
  top: 0;                     /* Placer la vidéo tout en haut */
  left: 0;                    /* Placer la vidéo à gauche */
  right: 0;                   /* Étendre la vidéo sur toute la largeur */
  z-index: -1;                /* S'assurer que la vidéo ne cache pas les autres éléments */
}

/* Ajustements spécifiques pour les écrans mobiles */
@media only screen and (max-width: 750px) {
  .slideshow .imgs video {
    object-fit: contain;      /* Garder la vidéo entière sans la couper */
    height: 100vh;             /* Limiter la hauteur à 100% de la hauteur de l'écran */
    width: auto;               /* Laisser la largeur ajustable pour garder le ratio */
    max-width: 100vw;          /* Limiter la largeur à 100% de l'écran */
    top: 0;                    /* Placer la vidéo tout en haut sur mobile */
    left: 0;                   /* Placer la vidéo à gauche sur mobile */
    right: 0;                  /* Étendre la vidéo sur toute la largeur sur mobile */
  }
}


.slideshow .overlay {
  z-index: 1 !important;
}

.overlay a {
    width: 100%;
    text-decoration: none !important;
}

.overlay .wrap {
  width: 80%;
  margin: 0 auto;
}

.overlay .wrap .logo {
  height: auto;
  margin: 0 auto;
}

.overlay .wrap span {
  font: 200px 'display';
  letter-spacing: -30px;
  line-height: 160px;
  text-transform: uppercase;
  word-break: break-word;    
  -webkit-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
{%- endstylesheet -%}



{% javascript %}
let 
  show = $('.slideshow'),
  imgs = show.children('.imgs'),
  autoSpeed = parseFloat(imgs.data('auto')) * 1000;

imgs.each((k,v) => {
  $(v).slick({
    infinite: true,
    fade: true,

    autoplay: true,
    autoplaySpeed: autoSpeed,
    speed: 1200,

    pauseOnFocus: false,
    pauseOnHover: false,
    pauseOnDotsHover: false,
    arrows: false
  });
});

$(window).on('orientationchange resize', function(e) {

  if(!show.alive()) return;

  let 
    img = imgs.find('img:first'),
    iw = parseFloat(img.attr('width')),
    ih = parseFloat(img.attr('height')),
    ww = $(window).width(),
    wh = $(window).height();

  let sh = (ww <= 750) ? (ww / iw) * ih : wh - parseFloat($('main').css('margin-top'));
  show.css('height', sh);
  imgs.css('height', sh);
});

$(window).trigger('resize');

{% endjavascript %}


