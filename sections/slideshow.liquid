{%- stylesheet -%}
.slideshow {
  position: relative;
  z-index: 0;
  
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.slideshow .imgs, .slideshow .imgs img, .slideshow .overlay {
  width: 100%;
  height: 100%;
}

.slick-track {
  position: absolute;
}
.slick-list, .slick-track, .slick-slide div {
  height: 100% !important;
}

.slideshow .imgs {
  top: 82px;
  height: calc(100% - 79px);
  z-index: -1 !important;
}

.slideshow .imgs img {
  object-fit: cover;
}

.slideshow .overlay {
  z-index: 1 !important;
}

.overlay a {
    width: 100%;
    text-decoration: none !important;
}

.overlay .wrap {
  width: 80%;
  margin: 0 auto;
}

.overlay .wrap .logo {
  height: auto;
  margin: 0 auto;
}

.overlay .wrap span {
  font: 200px 'display';
  letter-spacing: -3px;
  line-height: 160px;
  text-transform: uppercase;
  word-break: break-word;    
  -webkit-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
{%- endstylesheet -%}



{% javascript %}
let 
  show = $('.slideshow'),
  imgs = show.children('.imgs'),
  autoSpeed = parseFloat(imgs.data('auto')) * 1000;

imgs.each((k,v) => {
  $(v).slick({
    infinite: true,
    fade: true,

    autoplay: true,
    autoplaySpeed: autoSpeed,
    speed: 1200,

    pauseOnFocus: false,
    pauseOnHover: false,
    pauseOnDotsHover: false,
    arrows: false
  });
});

$(window).on('orientationchange resize', function(e) {

  if(!show.alive()) return;

  let 
    img = imgs.find('img:first'),
    iw = parseFloat(img.attr('width')),
    ih = parseFloat(img.attr('height')),
    ww = $(window).width(),
    wh = $(window).height();

  let sh = (ww <= 750) ? (ww / iw) * ih : wh - parseFloat($('main').css('margin-top'));
  show.css('height', sh);
  imgs.css('height', sh);
});

$(window).trigger('resize');

{% endjavascript %}