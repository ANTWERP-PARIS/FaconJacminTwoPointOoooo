{% schema %}
{
  "name": "Slideshow",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 9,
      "step": 2,
      "unit": "s",
      "label": "Change slides every",
      "default": 5
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "select",
      "id": "color_overlay",
      "options": [
        {
          "value": "sec",
          "label": "Secondary accent"
        },
        {
          "value": "black",
          "label": "Black"
        },
        {
          "value": "white",
          "label": "White"
        }
      ],
      "default": "sec",
      "label": "Color",
      "info": "The color of the overlay."
    },
    {
      "type": "select",
      "id": "overlay",
      "options": [
        {
          "value": "logo",
          "label": "Logo"
        },
        {
          "value": "text",
          "label": "Custom text"
        }
      ],
      "default": "logo",
      "label": "Overlay content"
    },
    {
      "type": "text",
      "id": "overlay_text",
      "label": "Custom text",
      "info": "Text over slideshow if 'Custom text' is selected.",
      "default": "New Collection"
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Slideshow link"
    },
    {
      "type": "select",
      "id": "window",
      "options": [
        {
          "value": "_self",
          "label": "This window"
        },
        {
          "value": "_blank",
          "label": "New window"
        }
      ],
      "default": "_self",
      "label": "Open in"
    },

    {
      "type": "video",
      "id": "video",
      "label": "Video"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Image slide",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },

    {
      "type": "video",
      "name": "Video slide",
      "limit": 1,
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Video"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}



<div class="slideshow">
    <div class="imgs fix" data-auto="{{ section.settings.change_slides_speed }}">
        {%- for block in section.blocks -%}
            <div>{% block.settings %}</div>
            
            {%- if block.settings.image -%}
                <img
                  srcset="{%- if block.settings.image.width >= 375 -%}{{ block.settings.image | image_url: width: 375 }} 375w,{%- endif -%}
                  {%- if block.settings.image.width >= 550 -%}{{ block.settings.image | image_url: width: 550 }} 550w,{%- endif -%}
                  {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if block.settings.image.width >= 1100 -%}{{ block.settings.image | image_url: width: 1100 }} 1100w,{%- endif -%}
                  {%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {%- if block.settings.image.width >= 1780 -%}{{ block.settings.image | image_url: width: 1780 }} 1780w,{%- endif -%}
                  {%- if block.settings.image.width >= 2000 -%}{{ block.settings.image | image_url: width: 2000 }} 2000w,{%- endif -%}
                  {%- if block.settings.image.width >= 3000 -%}{{ block.settings.image | image_url: width: 3000 }} 3000w,{%- endif -%}
                  {%- if block.settings.image.width >= 3840 -%}{{ block.settings.image | image_url: width: 3840 }} 3840w,{%- endif -%}
                  {{ block.settings.image | image_url }} {{ block.settings.image.width }}w"
                  sizes="100vw"
                  src="{{ block.settings.image | image_url: width: 1500 }}"
                  alt="{{ block.settings.image.alt | escape }}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round }}"
                >
            {%- endif -%}

            {%- if block.settings.video -%}
              VIDEO
          {%- endif -%}
        {%- endfor -%}
    </div>

    <div class="overlay abs row middle-xs center-xs">

        {%- if section.settings.link -%}
          <a href="{{  section.settings.link }}" target="{{  section.settings.window }}">
